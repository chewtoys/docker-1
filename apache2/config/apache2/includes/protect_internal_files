# Protect files and directories from prying eyes.
<FilesMatch "\.(engine|inc|info|install|module|profile|test|po|sh|.*sql|theme|tpl(\.php)?|xtmpl|svn-base|git)$|^(code-style\.pl|Entries.*|Repository|Root|Tag|Template|all-wcprops|entries|format)$">
	Order		Deny,Allow
	Deny from	All
</FilesMatch>

<IfModule mod_rewrite.c>
    RewriteEngine	On
    
    RewriteCond %{REQUEST_URI}    /\.(git|svn)
    RewriteRule .*                -                 [R=404]
</IfModule>
